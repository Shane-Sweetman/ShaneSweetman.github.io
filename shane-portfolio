function InfoCard({ title, items }) {
  return (
    <div className="bg-slate-900/60 backdrop-blur-sm rounded-2xl p-6 border border-slate-800">
      <div className="text-sm font-medium text-slate-500 mb-4">{title}</div>
      <div className="space-y-3">
        {items.map((item, i) => (
          <div key={i} className="flex justify-between items-center">
            <span className="text-sm text-slate-600">{item.label}</span>
            <span className="font-medium text-slate-300">{item.value}</span>
          </div>
        ))}
      </div>
    </div>
  );
}

function BentoCard({ title, description, span, delay }) {
  return (
    <motion.div
      initial={{ opacity: 0, y: 20 }}
      whileInView={{ opacity: 1, y: 0 }}
      viewport={{ once: true }}
      transition={{ delay }}
      whileHover={{ scale: 1.02, y: -5 }}
      className={`bg-slate-900/50 backdrop-blur-sm rounded-2xl p-8 border border-slate-800 hover:border-slate-700 transition-all ${span}`}
    >
      <h3 className="text-xl font-medium mb-3">{title}</h3>
      <p className="text-slate-500 text-sm leading-relaxed">{description}</p>
    </motion.div>
  );
}

function TimelineCard({ number, title, description, tags }) {
  return (
    <motion.div
      initial={{ opacity: 0, x: -30 }}
      whileInView={{ opacity: 1, x: 0 }}
      viewport={{ once: true }}
      className="relative pl-24"
    >
      {/* Timeline dot */}
      <div className="absolute left-6 top-8 w-5 h-5 rounded-full bg-slate-800 border-4 border-slate-950" />
      
      <div className="bg-slate-900/50 backdrop-blur-sm rounded-2xl p-8 border border-slate-800 hover:border-slate-700 transition-all">
        <div className="flex items-start gap-6">
          <div className="text-4xl font-light text-slate-800">{number}</div>
          <div className="flex-1">
            <h3 className="text-2xl font-medium mb-3">{title}</h3>
            <p className="text-slate-500 mb-4 leading-relaxed">{description}</p>
            <div className="flex flex-wrap gap-2">
              {tags.map((tag, i) => (
                <span key={i} className="px-3 py-1 bg-slate-800 rounded-lg text-xs text-slate-500">
                  {tag}
                </span>
              ))}
            </div>
          </div>
        </div>
      </div>
    </motion.div>
  );
}

function MinimalContactForm() {
  const [formData, setFormData] = useState({ name: '', email: '', message: '' });

  const handleSubmit = (e) => {
    e.preventDefault();
    alert('Message sent! (Demo)');
    setFormData({ name: '', email: '', message: '' });
  };

  return (
    <div className="space-y-6">
      <div className="grid md:grid-cols-2 gap-6">
        <input
          value={formData.name}
          onChange={(e) => setFormData({ ...formData, name: e.target.value })}
          placeholder="Name"
          className="px-6 py-4 bg-slate-950/50 border border-slate-800 focus:border-slate-600 rounded-xl text-white placeholder-slate-700 focus:outline-none transition-colors"
        />
        <input
          value={formData.email}
          onChange={(e) => setFormData({ ...formData, email: e.target.value })}
          placeholder="Email"
          className="px-6 py-4 bg-slate-950/50 border border-slate-800 focus:border-slate-600 rounded-xl text-white placeholder-slate-700 focus:outline-none transition-colors"
        />
      </div>
      
      <textarea
        value={formData.message}
        onChange={(e) => setFormData({ ...formData, message: e.target.value })}
        placeholder="Message"
        rows={5}
        className="w-full px-6 py-4 bg-slate-950/50 border border-slate-800 focus:border-slate-600 rounded-xl text-white placeholder-slate-700 focus:outline-none transition-colors resize-none"
      />
      
      <motion.button
        whileHover={{ scale: 1.02 }}
        whileTap={{ scale: 0.98 }}
        onClick={handleSubmit}
        className="w-full px-8 py-4 bg-slate-200 text-slate-950 rounded-xl font-medium hover:bg-white transition-colors"
      >
        Send Message
      </motion.button>
    </div>
  );
}
